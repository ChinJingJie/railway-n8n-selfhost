# n8n auth (commit this file as a template; DO NOT commit your real .env)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_me

# generate once and keep safe; changing it later breaks decryption of saved credentials
N8N_ENCRYPTION_KEY=replace_with_a_long_random_string

# Local dev host/URL
N8N_HOST=localhost
WEBHOOK_URL=http://localhost:5678/

# n8n port (local)
PORT=5678

# Local Postgres creds (used by docker-compose only)
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=n8n_password